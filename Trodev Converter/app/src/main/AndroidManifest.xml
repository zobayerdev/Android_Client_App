<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hpsoft.trodevconverter">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrodevConverter">
        <activity
            android:name=".scanner.ScannBarCodeActivity"
            android:exported="true" />
        <activity
            android:name=".scanner.ScanGalleryQrActivity"
            android:exported="true" />
        <activity
            android:name=".scanner.QrGenerateActivity"
            android:exported="true" />
        <activity
            android:name=".scanner.ScanQrCode"
            android:exported="true" />
        <activity
            android:name=".scanner.QrScannerDashboardActivity"
            android:exported="true" />
        <activity
            android:name=".ocr.ImageToText"
            android:exported="true" />
        <activity
            android:name=".DashBoard"
            android:exported="true" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar" />

        <activity android:name=".scanner.CaptureAct"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden"
            >

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>